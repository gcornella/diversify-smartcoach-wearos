<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BoxInsetLayout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:boxedEdges="none"
    tools:context=".MainActivity"
    tools:deviceIds="wear_round">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Full-screen circular progress background -->
        <ProgressBar
            android:id="@+id/progressBar_id"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circular_shape"
            android:indeterminate="false"
            android:max="840"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:clickable="false"
            android:focusable="false"/>

        <!-- STOP (top of chain) -->
        <Button
            android:id="@+id/stopServiceButton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="Stop"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/activeTimeText_id"
            app:layout_constraintVertical_chainStyle="spread"/>

        <!-- Center text (middle of chain) -->
        <TextView
            android:id="@+id/activeTimeText_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Initializing"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stopServiceButton_id"
            app:layout_constraintBottom_toTopOf="@id/startServiceButton_id"/>

        <!-- START -->
        <Button
            android:id="@+id/startServiceButton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="Start"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activeTimeText_id"
            app:layout_constraintBottom_toTopOf="@id/buttonsRow"/>

        <!-- BOTTOM ROW: Save + Settings side by side -->
        <LinearLayout
            android:id="@+id/buttonsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/saveDataButton_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="44dp"
                android:minHeight="44dp"
                android:text="ðŸ’¾"
                android:textSize="30sp"
                android:fontFamily="sans-serif-medium"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnOpenSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="44dp"
                android:minHeight="44dp"
                android:text="âš™ï¸"
                android:textSize="30sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>
